<Window x:Class="AirplanePanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AirplanePanel" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Button Content="起飞" Grid.Column="1" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top" Width="60" Height="35"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="35" Margin="30,80,0,0" TextWrapping="Wrap" Text="状态" FontSize="18" VerticalAlignment="Top" Width="60"/>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="200" Margin="110,60,0,0" VerticalAlignment="Top" Width="200" >
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>

                </Grid.RowDefinitions>

                <Button Content="上升" Grid.Column="0" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" Width="60" Height="35"/>
                <Button Content="下降" Grid.Column="1" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" Width="60" Height="35"/>
                <Button Content="加速" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Top" Width="60" Height="35"/>
                <Button Content="减速" Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Center" Margin="10" VerticalAlignment="Top" Width="60" Height="35"/>
                
                <Button Content="侧飞" Grid.Row="2" Grid.Column="0"  HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" Width="60" Height="35"/>

            </Grid>
           



        </StackPanel>
        <Rectangle Grid.Column="1"  HorizontalAlignment="Left" Height="180" Margin="110,45,0,0" Stroke="Black" VerticalAlignment="Top" Width="200"/>

        <Button Content="降落" Grid.Column="1" HorizontalAlignment="Left" Margin="30,250,0,0" VerticalAlignment="Top" Width="60" Height="35"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="48" Margin="131,250,0,0" TextWrapping="Wrap" Text="侧风" FontSize="30" VerticalAlignment="Top" Width="147"/>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="203,250,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="203,272,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
